<% provide(:title, 'Sign in') %>

<% if false %>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>

    <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
<% end %>

<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
  <div class="content-main">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
          </div>
          <%= f.text_field :email, placeholder: "E-mail", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
          </div>
          <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
        </div>
      </div>

      <div class="form-group button">
        <div class="input-gorup">
          <%= f.submit "Logar", class: "btn btn-default" %>
        </div>
      </div>

    <% end %>
