<% provide(:title, 'Sign up') %>

  <section class="container">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
      <h2 class="main-content-title">Minhas Informações</h2>
      <%= form_for(@user) do |f| %>

        <%= render 'fields', f: f %>
        <div class="form-group button">
          <%= f.submit "Enviar", class: "btn btn-default" %>
        </div>

      <% end %>
    </div>
  </section>
