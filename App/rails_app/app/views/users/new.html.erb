<% provide(:title, 'Sign up') %>

<% if false %>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= render 'fields', f: f %>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>
<% end %>
<div class="wrapper">
  <section class="container">
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
      <h2 class="main-content-title">Minhas Informações</h2>

      <form>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            </div>
            <input name="name" type="text" placeholder="Nome" class="form-control"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            </div>
            <input name="email" type="email" placeholder="E-mail" class="form-control"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-education" aria-hidden="true"></span>
            </div>
            <input name="course" type="text" placeholder="Curso" class="form-control"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
            </div>
            <input name="pass" type="password" placeholder="Senha" class="form-control"></input>
          </div>
        </div>
        <div class="form-group button">
          <!-- <div class="input-group button"> -->
          <input class="btn btn-default" type="submit" value="Enviar">
          <!-- </div> -->
        </div>
      </form>
    </div>
  </section>
</div>
